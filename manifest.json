{
    "manifest_version": 3,
    "name": "CCCR Lecture Automation - Lecto",
    "description": "Chrome extension that runs all untaken lectures on the lecture page of the CCCR.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "notifications",
        "storage"
    ],
    "host_permissions": [
        "https://discord.com/*",
        "https://www.cccr-edu.or.kr/*"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "audios/Slack-Ding.mp3",
                "scripts/automation.js",
                "scripts/lecture-player.js",
                "scripts/constants.js",
                "scripts/helper.js"
            ],
            "matches": ["https://www.cccr-edu.or.kr/*"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
